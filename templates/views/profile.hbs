<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/homepage.css">
    <link rel="stylesheet" href="/css/profile.css">
    <title>Profile Page</title>
</head>

<body>
    {{>webnavbar}}
    {{>webheader}}
    {{>websearch}}
    <div class="upper-part">
        <div class="profile-photo">
            <img src="avatar.jpeg" alt="">
            <div class="change-profilepic">
                <button>Change profile picture</button>
            </div>
        </div>
        <div class="submit">
            <button>Submit Changes</button>
        </div>
    </div>
    <div class="lower-part">
        <label for="Username">Username</label>
        <input type="text" class="Username">
        <label for="Email">Email ID</label>
        <input type="email" class="Email">
        <label for="Phone">Phone</label>
        <input type="tel" class="Phone">
        <label for="Primary-Address">Primary Address</label>
        <input type="text" class="Primary-Address">
        <label for="Secondary-Address">Secondary Address</label>
        <input type="text" class="Secondary-Address">
    </div>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
<script src="/javascript/homepage.js"></script>
</html>